{
  "compilerOptions": {
      "lib": [
          "DOM",
          "ES2017",
          "WebWorker"
      ],
      "target": "es2017",
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importsNotUsedAsValues": "error",
      "isolatedModules": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "types": [
          "svelte",
          "@sapper"
      ],
      "typeRoots": [
          "types"
      ],
  },
  "include": [
      "src/**/*",
      "src/node_modules/**/*",
      "static/*"
  ],
  "exclude": [
      "node_modules/*",
      "__sapper__/*",
  ],
}